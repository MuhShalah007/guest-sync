generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  password  String
  role      Role      @default(PANITIA)
  name      String?
  createdAt DateTime  @default(now())
  events    EventPanitia[]
}

model Event {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  startDate   DateTime
  endDate     DateTime
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  tamu        Tamu[]
  panitia     EventPanitia[]
  @@index([isActive])
  @@index([startDate])
  @@index([endDate])
}

model EventPanitia {
  id        Int      @id @default(autoincrement())
  event     Event    @relation(fields: [eventId], references: [id])
  eventId   Int
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())

  @@unique([eventId, userId])
}

enum Role {
  ADMIN
  HUMAS
  PANITIA
}

enum Keperluan {
  UMUM
  EVENT
}

enum Kunjungan {
  individu
  lembaga
}

model Tamu {
  id              Int      @id @default(autoincrement())
  jenisTamu       String   
  nama            String
  noKontak        String
  asal            String
  kelamin         String   
  jenisKeperluan  Keperluan   @default(UMUM)
  keperluan       String?  
  eventId         Int?     
  event           Event?   @relation(fields: [eventId], references: [id], onDelete: SetNull)
  fotoSelfi       String?   
  createdAt       DateTime @default(now())
  waliDari        String?
  kelas           String?
  jenisKunjungan  Kunjungan   @default(individu)
  namaLembaga     String?
  jumlahOrang     Int?
  jumlahLaki      Int?     
  jumlahPerempuan Int?     
  menginap        Boolean  @default(false)
  tanggalKeluar   DateTime?

  @@index([createdAt])
  @@index([jenisTamu])
  @@index([menginap])
}